<Window x:Class="Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="208" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid Margin="0,0,4,35">
        <TextBox x:Name="LoginTextBox" HorizontalAlignment="Left" Height="18" Margin="60,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Grid.ColumnSpan="2"/>
        <Label Content="Or" HorizontalAlignment="Left" Margin="90,95,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="60,57,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="218" RenderTransformOrigin="0.513,0.722" PasswordChar="*"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" Width="75" Click="LoginButton_Click"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="21,29,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.436,0.038"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="0,52,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,1.5"/>
        <Button x:Name="RegisterButton" Content="Create account&#xD;&#xA;" HorizontalAlignment="Left" Margin="118,98,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="2.427,0.5" Height="20" Click="RegisterButton_Click"/>
    </Grid>
</Window>
